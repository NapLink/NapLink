{
    "name": "@naplink/naplink",
    "version": "0.0.6",
    "description": "现代化的 NapCat WebSocket TypeScript/JavaScript 客户端 SDK",
    "type": "module",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        }
    },
    "files": [
        "dist",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "lint": "eslint src --ext .ts",
        "lint:fix": "eslint src --ext .ts --fix",
        "typecheck": "tsc --noEmit"
    },
    "packageManager": "pnpm@10.26.1",
    "keywords": [
        "napcat",
        "onebot",
        "onebot-11",
        "qq",
        "bot",
        "websocket",
        "sdk",
        "typescript"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "isomorphic-ws": "^5.0.0",
        "ws": "^8.18.3"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.3",
        "@eslint/js": "^9.39.2",
        "@types/node": "^25.0.3",
        "@types/ws": "^8.18.1",
        "@typescript-eslint/eslint-plugin": "^8.50.0",
        "@typescript-eslint/parser": "^8.50.0",
        "eslint": "^9.39.2",
        "tsup": "^8.5.1",
        "typescript": "^5.9.3",
        "vitest": "^4.0.16"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}