{
    "name": "@naplink/naplink",
    "version": "0.0.1",
    "description": "现代化的 NapCat WebSocket 客户端 SDK",
    "type": "module",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        }
    },
    "files": [
        "dist",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "lint": "eslint src --ext .ts",
        "lint:fix": "eslint src --ext .ts --fix",
        "typecheck": "tsc --noEmit"
    },
    "keywords": [
        "napcat",
        "onebot",
        "onebot-11",
        "qq",
        "bot",
        "websocket",
        "sdk",
        "typescript"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "isomorphic-ws": "^5.0.0",
        "ws": "^8.18.0"
    },
    "devDependencies": {
        "@types/node": "^22.0.0",
        "@types/ws": "^8.5.0",
        "@typescript-eslint/eslint-plugin": "^7.0.0",
        "@typescript-eslint/parser": "^7.0.0",
        "eslint": "^8.57.0",
        "tsup": "^8.0.0",
        "typescript": "^5.4.0",
        "vitest": "^1.6.0"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}